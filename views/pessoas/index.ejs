<%- include('../partials/header') %>

<h1>Pessoas</h1>
<p><a href='/pessoas/create' class='btn btn-success'>Nova pessoa</a></p>


<table class='table table-dark table-bordered table-hover'>
    <tr>
        <th>Nome</th>
        <th>Cargo</th>
        <th>Ações</th>
    </tr>
    <% pessoas.map(pessoa => { %>
    <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.cargo %></td>
        <td>
            <a class='btn btn-primary' href='/pessoas/update/<%= pessoa.id %>'>Editar</a>
            <a class='btn btn-danger' href='/pessoas/delete/<%= pessoa.id %>'>Excluir</a>
        </td>
    </tr>
    <% }) %>
</table>

<%- include('../partials/footer') %>